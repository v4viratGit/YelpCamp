<%- include("../partials/header")%>

<div class="container text-center">
    <div class="row">
        <div class="col-10 col-md-6 pb-4 my-4 mx-auto border border-dark rounded-0">
            <h1>Add a new Campground</h1>
            <form action="/campgrounds" method="POST">
                <input class="form-control mb-3" type="text" name="campname" placeholder="Name">
                <input class="form-control mb-3" type="text" name="campurl" placeholder="Image URL">
                <input class="form-control mb-3" type="text" name="campdesc" placeholder="Description">
                <button class="btn btn-outline-dark btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>
